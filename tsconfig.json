{
    "compilerOptions": {
        "outDir": "./dist-tsc/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node"
    },
    "include": ["src/*", "public/locales/*"],
    "paths": {
        "*": ["node_modules"]
    },
    "exclude": [
        "node_modules"
    ]
}
